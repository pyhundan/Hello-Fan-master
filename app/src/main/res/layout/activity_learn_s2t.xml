<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LearnS2TActivity">


    <LinearLayout
        android:id="@+id/Show_SLin"
        android:layout_width="fill_parent"
        android:layout_height="64dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="1dp">

        <TextView
            android:id="@+id/show_s"
            android:layout_width="274dp"
            android:layout_height="53dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/textview_round_border"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="Simple"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="16dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/show_wordsLin"
        android:layout_width="fill_parent"
        android:layout_height="120dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/btnlist"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/show_words"
            android:layout_width="match_parent"
            android:layout_height="102dp"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/textview_round_border"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="words"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="16dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Show_expLin"
        android:layout_width="fill_parent"
        android:layout_height="156dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/show_wordsLin"
        app:layout_constraintTop_toBottomOf="@+id/Show_SLin"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/show_exp"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:background="@drawable/textview_round_border"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="expression"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="0dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btnlist"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:background="@color/whitesmoke"

        android:orientation="vertical"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="394dp">

    </LinearLayout>


</LinearLayout>